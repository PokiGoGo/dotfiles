[core]
	editor = vim
	excludesfile = ~/.gitignore

[color]
	ui = auto
	diff = auto
	status = auto
	branch = auto
	log = auto

[alias]
	st = status
	ci = commit
	co = checkout
	br = branch
	df = diff
	la = log --graph --decorate --pretty=oneline --abbrev-commit --all
	laa= log --graph --decorate --abbrev-commit --all --pretty='format:%C(auto)%h %an%x09%d %s'

[push]
	default = simple

[diff]
	compactionHeuristic = 1
[pager]
	log = ~/.dotfiles/diff-highlight | less
	show = ~/.dotfiles/diff-highlight | less
	diff = ~/.dotfiles/diff-highlight | less
